
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /roadmaps/{roadmapId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Perfis de Usuário
    // Um usuário pode ler e escrever em seu próprio documento de perfil.
    // A permissão 'write' já inclui 'create' e 'update'.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Dicionário - permitir leitura pública
    match /dictionary/{termId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // Conquistas (definições) - permitir leitura pública
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
